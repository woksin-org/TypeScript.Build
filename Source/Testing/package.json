{
    "name": "@woksin/typescript.testing",
    "version": "6.0.6",
    "description": "Building blocks for setting up testing in TypeScript projects",
    "repository": {
        "type": "git",
        "url": "https://github.com/woksin-org/TypeScript.Build.git"
    },
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "main": "Distribution/index.js",
    "types": "Distribution/index.d.ts",
    "files": [
        "Distribution",
        ".mocharc.js",
        "**/*.ts"
    ],
    "scripts": {
        "prebuild": "yarn clean",
        "postbuild": "yarn lint",
        "build": "tsc -b tsconfig.json ",
        "clean": "tsc -b --clean ",
        "lint:fix": "eslint \"**/*.ts\" --fix",
        "lint": "eslint \"**/*.ts\"",
        "test": "mocha",
        "ci": "yarn build && yarn test"
    },
    "dependencies": {
        "@types/chai": "4.3.5",
        "@types/chai-as-promised": "7.1.5",
        "@types/mocha": "10.0.1",
        "@types/sinon": "10.0.16",
        "@types/sinon-chai": "3.2.9",
        "chai": "4.3.7",
        "chai-as-promised": "7.1.1",
        "mocha": "10.2.0",
        "sinon": "15.2.0",
        "sinon-chai": "3.7.0",
        "ts-sinon": "2.0.2",
        "ts-node": "10.9.1"
    },
    "devDependencies": {
        "@woksin/typescript.build": "6.0.6"
    }
}